@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    body {
        background: url('@(Url.Content("~/Content/Images/cruisebg.JPG"))') no-repeat fixed center center;
        background-size: cover;
        margin: 0px;
    }
    #header-background {
        width: 500px;
        height: 75px;
        display: block;
        margin-top: 10px;
        background-color: #FFFAF0;
        border: solid 1px black;
    }
    #menu-container {
        width: 200px;
        height: 400px;
        margin-top: 50px;
        background-color: #FFFAF0;
    }
    #menu-list-container {
       width: 180px;
       height: 400px;
       margin-left: 20px;
    }
    #menu-list {
        width: 100%;
        height: 100%;
        list-style-type: none;
        padding: 0px;
    }
    #menu-list li {
        width: 180px;
        margin: 10px 0px;
        height: 35px;
        display: block;
        text-align: center;
        background-color: #b0e0e6;
    }
    #menu-list li:hover {
        background-color: #f1d4f1;
    }
    .menu-item {
        display: block;
        height: 35px;
        margin: auto;
        text-align: center;
        vertical-align: middle;
        width: 180px;
        
    }
</style>

<div id="header-background" class="ui-corner-tr ui-corner-br">
    <img id="header-logo" src="~/Content/Images/tall-header.png" style="float:right;"/>
</div>

<div id="menu-container" class="ui-corner-tr ui-corner-br">
    <div id="menu-list-container">
        <ul id="menu-list">
            <li><a class="menu-item">Home</a></li>
            <li><a class="menu-item">RSVP</a></li>
            <li><a class="menu-item">About the Couple</a></li>
        </ul>
    </div>
</div>
