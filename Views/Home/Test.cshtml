@{
    ViewBag.Title = "Test";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #main-container {
        width: 100%;
        height: 100%;
        position: relative;
    }
    #top-bar-container {
        width: 100%;
        height: 50px;
        position: relative;        
    }
    #top-bar {
        background-color: black;
        height: 50px;
        margin: 0px 0px 0px 30px;
        display: none;
        opacity:0.8;
        filter:alpha(opacity=80); /* For IE8 and earlier */
    }
    #menu-container {
        width: 245px;
        height: 600px;
        margin: 0px 0px 0px 30px;
        display: block;
        background-color: black;
        opacity:0.8;
        filter:alpha(opacity=80); /* For IE8 and earlier */
        display: none;
        float: left;
    }
    #menu-list {
        list-style-type: none;
        margin: 10px 0px 0px;
        padding: 0px;
    }
    #menu-list li {
        height: 50px;
        width: 100%;
        margin: 10px 0px 0px;      
    }
    #menu-list li a {
        color: #4d2548;
        font-size: 14pt;
        font-family: Trebuchet;
        text-decoration: none;
        width: 250px;
        height: 50px;
        display: block;
        padding-top: 12px;
        text-align: center;
        margin-left: -7px;
    }
    #menu-list li a.active-link {
        background: url('@(Url.Content("~/Content/Images/menuarrows.png"))') no-repeat -291px 0px;
        color: white;
    }
    #menu-list li a:hover {
        background: url('@(Url.Content("~/Content/Images/menuarrows.png"))') no-repeat -37px 0px;
    }
    #menu-list li a.active-link:hover {
        background: url('@(Url.Content("~/Content/Images/menuarrows.png"))') no-repeat -291px 0px;
        color: white;
    }
    #content-container {
        width: 700px;
        height: 800px;
        display: block;
        background-color: black;
        opacity:0.8;
        filter:alpha(opacity=80); /* For IE8 and earlier */
        margin: 30px 0px 0px 50px;
        display: none;
        float: left;
    }
    #show-slideshow {
        color: #ccccff;
        cursor: pointer;
        position: absolute;
        top: 12px;
        right: 15px;
    }
    #show-slideshow:hover {
        color: #9a9ac1;
        text-decoration: none;
    }
</style>
<div id="main-container">
    <div id="top-bar-container">
        <div id="top-bar">
            <a id="show-slideshow">[-]&nbsp;<span style="text-decoration: underline;">Hide menu</span></a>
        </div>
    </div>
    <div id="menu-container" class="ui-corner-br ui-corner-bl">
        <img id="header-logo" src="~/Content/Images/tall-header.png" style="margin-left: -30px;"/>
        <ul id="menu-list">
            <li><a href="#" class="active-link">Home</a></li>
            <li><a href="#">About the couple</a></li>
            <li><a href="#">RSVP</a></li>
        </ul>
    </div>
    <div id="content-container" class="ui-corner-all">
        
    </div>
</div>

<script type="text/javascript">
    $(function() {
        $("#top-bar").show("slide", 1000);
        setTimeout(function () { $("#menu-container").slideDown(700); }, 500);
        setTimeout(function () { $("#content-container").show("slide", 700); }, 1500);
        $("#show-slideshow").click(function () {
            if ($("#menu-container").is(":visible"))
                MinimizeAllWindows();
            else {
                MaximizeAllWindows();
            }
        });
    });
    
    function MinimizeAllWindows() {
        $("#content-container").hide('slide', { direction: 'left' }, 700);
        setTimeout(function () {
            $("#menu-container").slideUp(700);
            $("#show-slideshow").html("[+]&nbsp;<span style=\"text-decoration: underline;\">Show menu</span>");
        }, 710);
    }
    function MaximizeAllWindows() {
        $("#menu-container").slideDown(700);
        setTimeout(function () {
            $("#content-container").show('slide', 700);
            $("#show-slideshow").html("[-]&nbsp;<span style=\"text-decoration: underline;\">Hide menu</span>");
        }, 710);
    }

